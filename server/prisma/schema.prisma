generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CHILD
  NURSE
  MEDICAL_ADMIN
  ADMIN
}

model User {
  id             String   @id @default(cuid())
  name           String
  email          String   @unique
  password       String
  role           Role
  parents        Parent[] @relation("ChildParents")
  nurseVisits    Visit[]  @relation("NurseVisits")
  approvedVisits Visit[]  @relation("ApprovedBy")
  createdAt      DateTime @default(now())
}

model Parent {
  id               String  @id @default(cuid())
  name             String
  age              Int
  gender           String
  address          String
  diseases         String?
  medications      String?
  emergencyContact String
  children         User[]  @relation("ChildParents")
  visits           Visit[]
}

model Visit {
  id            String      @id @default(cuid())
  parentId      String
  nurseId       String?
  scheduledFor  DateTime
  visitType     VisitType
  status        VisitStatus @default(PENDING)
  notes         String?
  completedAt   DateTime?
  vitals        Vitals?
  Parent        Parent      @relation(fields: [parentId], references: [id])
  Nurse         User?       @relation("NurseVisits", fields: [nurseId], references: [id])
  approvedById  String?
  ApprovedBy    User?       @relation("ApprovedBy", fields: [approvedById], references: [id])
  approvalNote  String?
  rejectionNote String?
  approvedAt    DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @default(now()) @updatedAt
}

model Vitals {
  id          String   @id @default(cuid())
  visitId     String   @unique
  bp          String?
  sugar       String?
  pulse       String?
  oxygen      String?
  temperature String?
  notes       String?
  medicines   String?
  Visit       Visit    @relation(fields: [visitId], references: [id])
  createdAt   DateTime @default(now())
}

enum VisitStatus {
  PENDING
  ASSIGNED
  STARTED
  WAITING_APPROVAL
  REVISION_REQUIRED
  APPROVED
  COMPLETED
}

enum VisitType {
  BASIC
  FULL
}
